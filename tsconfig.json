{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ESNext",
        "moduleResolution": "Node",
        "allowJs": true,
        "checkJs": false,
        "resolveJsonModule": true,
        "types": ["node"]
    },
    "include": [
        "types/**/*.d.ts",
        "types/nuxt-env.d.ts"
    ],
    "exclude": [
        "server/lib/**/*"
    ],
    "typeRoots": ["./node_modules/@types", "./types"]
}